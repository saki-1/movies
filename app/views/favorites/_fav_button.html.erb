<% if current_user.favoriting?(movie) %>
  <%= form_with(model: current_user.favorites.find_by(movie_id: movie.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :movie_id, movie.id %>
    <%= f.submit 'UnFavorite', class: "btn btn-sm btn-outline-secondary" %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :movie_id, movie.id %>
    <%= f.submit 'Favorite', class: 'btn btn-sm btn-outline-secondary' %>
  <% end %>
<% end %>

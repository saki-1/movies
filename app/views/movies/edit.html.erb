<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <h1><%= @movie.title %>の編集ページ</h1>
    
    <%= form_with(model: @movie, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :rank, 'お気に入り度' %>
        <%= f.number_field :rank, min: 1, max: 5, step: 1, class: 'form-control' %>
      </div>
      
      <%= f.submit '更新する', class: 'btn btn-primary btn-block' %>
    <% end %>  
    
    <%= link_to 'ひとつ前に戻る', movie_path, class: 'btn btn-primary btn-block' %>
    <%= link_to '一覧に戻る', movies_path, class: 'btn btn-primary btn-block' %>

  </div>
</div>
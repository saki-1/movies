<div class="row">
  <% movies.each do |movie| %>
    <div class="col-md-4">
      <div class="mb-4 shadow-sm"><%= image_tag movie.image.url, :size => '345x225' if movie.image? %></div>
      <div class="card-body">
        <div class="card-text"><%= movie.title %></div>
        <div class="card-text"><%= truncate(movie.content, length:10) %></div>
      </div>
      <div class="btn-group"><%= link_to '詳細', movie, class: "btn btn-sm btn-outline-secondary" %></div>
      <% if logged_in? %>
        <div class="btn-group">
          <%= render 'favorites/fav_button', movie: movie %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<%= paginate movies %>